<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/light_blue">

        <!-- 返回按键 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            tools:ignore="ContentDescription" />

        <!-- 设备名称 -->
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前哨站"
            android:fontFamily="@font/custom_font"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!-- 设备信息卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_bar"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <!-- 设备图片 -->
        <ImageView
            android:id="@+id/iv_device_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/device_image1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_status_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_device_info"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="状态设置"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4D4D4D"
        android:fontFamily="@font/custom_font"/>

    <!-- 设置列表 -->
    <RelativeLayout
        android:id="@+id/rl_settings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_set"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">

        <!-- 设置项1 -->
        <LinearLayout
            android:id="@+id/ll_setting_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_setting_name_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="开启"
                android:fontFamily="@font/custom_font"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/sw_setting_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                style="@style/CustomSwitchMaterial"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <!-- 设置项2 -->
        <LinearLayout
            android:id="@+id/ll_setting_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_setting_item_1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_setting_name_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="颜色"
                android:fontFamily="@font/custom_font"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/sw_setting_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                style="@style/CustomSwitchMaterial_rb"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <!-- 设置项3 -->
        <RelativeLayout
            android:id="@+id/rl_setting_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_setting_item_2"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:padding="10dp">

            <!-- 设置名称 -->
            <TextView
                android:id="@+id/tv_setting_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="旋转方向"
                android:fontFamily="@font/custom_font"
                android:textColor="#000000"
                android:textSize="24sp" />

            <!-- 提示文本 -->
            <TextView
                android:id="@+id/tv_setting_hint_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_setting_name_3"
                android:layout_alignStart="@id/tv_setting_name_3"
                android:text="ON/顺时针 OFF/逆时针"
                android:fontFamily="@font/custom_font"
                android:textColor="#8E8E8E"
                android:textSize="10sp"
                android:layout_marginEnd="8dp"
                tools:ignore="SmallSp" />

            <!-- Switch -->
            <Switch
                android:id="@+id/sw_setting_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:checked="false"
                style="@style/CustomSwitchMaterial"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>


        <!-- 设置项4 -->
        <RelativeLayout
            android:id="@+id/rl_setting_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_setting_item_3"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:padding="10dp">

            <!-- 设置名称 -->
            <TextView
                android:id="@+id/tv_setting_name_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="血量"
                android:fontFamily="@font/custom_font"
                android:textColor="#000000"
                android:textSize="24sp"/>

            <!-- EditText -->
            <EditText
                android:id="@+id/et_health_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_alignTop="@id/tv_setting_name_4"
                android:layout_alignBottom="@id/tv_setting_name_4"
                android:text="2000"
                android:textSize="14sp"
                android:fontFamily="@font/custom_font"
                android:inputType="number"
                android:cursorVisible="false"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/sb_setting_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_setting_name_4"
                android:layout_marginTop="10dp"
                android:max="50"
                android:progress="20"
                android:layout_alignParentStart="true"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_seekbar_thumb"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>