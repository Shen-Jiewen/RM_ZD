<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSwitchMaterial" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/custom_thumb_color</item>
        <item name="trackTint">@color/custom_track_color</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
    </style>

    <style name="CustomSwitchMaterial_rb" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/custom_thumb_color</item>
        <item name="trackTint">@color/custom_track_color</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track_rb</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 禁用涟漪效果 -->
        <item name="itemBackground">@color/transparent</item>
        <!-- 设置图标和文本颜色 -->
        <item name="itemIconTint">@drawable/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_text_color_selector</item>
        <!-- 其他样式 -->
        <item name="itemIconSize">24dp</item>
    </style>

</resources>